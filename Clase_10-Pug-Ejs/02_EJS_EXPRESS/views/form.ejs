<!DOCTYPE html>
<html lang="en">
  <%- include('templates/header'); -%>

  <style>
    body {
      margin: 0 !important;
      padding: 0 !important;
    }
    i {
      font-size: 3rem;
      color: whitesmoke;
    }
  </style>

  <body>
    <%- include('templates/nav'); -%>

    <div class="container contApp my-5">
      <div class="container m-5 row justify-content-center">
        <div class="col-auto">
          <div class="card bg-info shadow rounded" style="width: 38rem">
            <h1 class="text-center text-dark my-2">Cargar productos</h1>
            <i class="bi bi-cloud-arrow-up text-center"></i>
            <div class="card-body">
              <div class="m-2">
                <form action="/form" method="POST">
                  <div class="row g-3">
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Product name"
                        aria-label="Product name"
                        name="name"
                      />
                    </div>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Product price"
                        aria-label="Last name"
                        name="price"
                      />
                    </div>
                  </div>
                  <div class="col text-center">
                    <button type="submit" class="btn btn-dark mt-3">
                      Submit
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-dark"><%- include('./templates/footer'); -%></div>
  </body>
</html>
